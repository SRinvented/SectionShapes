<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">


    <VisualBrush
        x:Key="SectionHatchFill"
        TileMode="Tile"
        Viewbox="0 0 6 6"
        ViewboxUnits="Absolute"
        Viewport="0 0 6 6"
        ViewportUnits="Absolute">
        <VisualBrush.Visual>
            <Canvas>
                <Rectangle
                    Width="6"
                    Height="6"
                    Fill="Beige" />
                <Path
                    Data="M 0 6 l 6 -6"
                    Stroke="Red"
                    StrokeThickness="0.3" />
            </Canvas>
        </VisualBrush.Visual>
    </VisualBrush>


</ResourceDictionary>